@using System.Security.Claims
@model Leave2Day.Models.ApprovalViewModel
@{
    ViewData["Title"] = "Review Leave Request";
    var userRole = User.FindFirstValue("Role");
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Review Leave Request</h4>
            </div>
            <div class="card-body">
                <!-- Leave Request Details -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="text-muted">Employee Information</h6>
                        <p><strong>Name:</strong> @Model.LeaveRequest.User?.FullName</p>
                        <p><strong>Email:</strong> @Model.LeaveRequest.User?.email</p>
                        <p><strong>Department:</strong> @Model.LeaveRequest.User?.department</p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted">Leave Details</h6>
                        <p><strong>Type:</strong> @Model.LeaveRequest.type</p>
                        <p><strong>Duration:</strong> @Model.LeaveRequest.numberOfDays day(s)</p>
                        <p><strong>Applied On:</strong> @Model.LeaveRequest.appliedDate.ToString("dd MMMM yyyy HH:mm")</p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <p><strong>Start Date:</strong> @Model.LeaveRequest.startDate.ToString("dd MMMM yyyy")</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>End Date:</strong> @Model.LeaveRequest.endDate.ToString("dd MMMM yyyy")</p>
                    </div>
                </div>
               @*  @if (!string.IsNullOrEmpty(item.DocumentPath))
                {
                    <a href="@Url.Content(item.DocumentPath)" target="_blank" class="btn btn-sm btn-info">
                        View Document
                    </a>
                }
 *@

                <div class="mb-4">
                    <h6 class="text-muted">Reason for Leave</h6>
                    <p class="border p-3 bg-light rounded">@Model.LeaveRequest.reason</p>
                </div>

                <!-- Previous Comments -->
                @if (!string.IsNullOrEmpty(Model.LeaveRequest.supervisorFeedback) && userRole != "Supervisor")
                {
                    <div class="mb-3">
                        <h6 class="text-muted">Supervisor Comments</h6>
                        <p class="border p-3 bg-light rounded">@Model.LeaveRequest.supervisorFeedback</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.LeaveRequest.hodFeedback) && userRole == "HR")
                {
                    <div class="mb-3">
                        <h6 class="text-muted">HOD Comments</h6>
                        <p class="border p-3 bg-light rounded">@Model.LeaveRequest.hodFeedback</p>
                    </div>
                }

                <!-- Approval Form -->
                <hr />
                <form asp-action="Review" asp-route-id="@Model.LeaveRequest.id" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label for="Comments" class="form-label">Comments </label>
                        <textarea asp-for="Comments" class="form-control" rows="3"
                                  placeholder="Add your comments here..."></textarea>
                        <span asp-validation-for="Comments" class="text-danger"></span>
                    </div>

                    @* Buttons shown only to Supervisor or HOD. HR cannot approve; HR can only mark the request as processed. *@
                    <div class="d-flex gap-2">
                        @if (userRole == "Supervisor" || userRole == "HOD")
                        {
                            <button type="submit" name="IsApproved" value="true" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Approve
                            </button>
                            <button type="submit" name="IsApproved" value="false" class="btn btn-danger">
                                <i class="bi bi-x-circle"></i> Reject
                            </button>
                        }
                        else if (userRole == "HR")
                        {
                            @* HR cannot Approve/Reject. Provide a button to mark as processed *@
                            <button type="submit" name="IsProcessed" value="true" class="btn btn-primary">
                                <i class="bi bi-list-check"></i> Mark as Processed
                            </button>
                        }
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Employee Leave Balance</h5>
            </div>
            <div class="card-body">
                @if (Model.LeaveRequest.User != null)
                {
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Annual Leave:</span>
                            <span class="fw-bold text-primary">@Model.LeaveRequest.User.RemainingAnnualLeave remaining</span>
                        </div>
                        <small class="text-muted">@Model.LeaveRequest.User.LeaveBalance.UsedAnnual of @Model.LeaveRequest.User.LeaveBalance.Annual used</small>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Sick Leave:</span>
                            <span class="fw-bold text-success">@Model.LeaveRequest.User.RemainingSickLeave remaining</span>
                        </div>
                        <small class="text-muted">@Model.LeaveRequest.User.LeaveBalance.UsedSick of @Model.LeaveRequest.User.LeaveBalance.Sick used</small>
                    </div>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">Approval Guidelines</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled small">
                    <li class="mb-2">• Check employee's leave balance</li>
                    <li class="mb-2">• Verify dates don't conflict with business needs</li>
                    <li class="mb-2">• Ensure adequate notice period</li>
                    <li class="mb-2">• Consider team coverage</li>
                    <li>• Add comments if rejecting</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

