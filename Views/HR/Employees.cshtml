
@{
}
@model List<Leave2Day.Models.User>
@{
    ViewData["Title"] = "All Employees";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h1><i class="bi bi-people"></i> All Employees</h1>
        <p class="text-muted">View employee leave information and history</p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Employee</th>
                                    <th>Department</th>
                                    <th>Role</th>
                                    <th>Annual Leave</th>
                                    <th>Sick Leave</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">@employee.FullName</div>
                                            <small class="text-muted">@employee.email</small>
                                        </td>
                                        <td>@employee.department</td>
                                        <td>
                                            <span class="badge bg-light text-dark">@employee.role</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="progress flex-grow-1 me-2" style="height: 6px; width: 60px;">
                                                    <div class="progress-bar bg-primary"
                                                         style="width: @(employee.LeaveBalance.Annual > 0 ? ((double)employee.RemainingAnnualLeave / employee.LeaveBalance.Annual) * 100 : 0)%"></div>
                                                </div>
                                                <small class="text-muted">@employee.RemainingAnnualLeave/@employee.LeaveBalance.Annual</small>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="progress flex-grow-1 me-2" style="height: 6px; width: 60px;">
                                                    <div class="progress-bar bg-success"
                                                         style="width: @(employee.LeaveBalance.Sick > 0 ? ((double)employee.RemainingSickLeave / employee.LeaveBalance.Sick) * 100 : 0)%"></div>
                                                </div>
                                                <small class="text-muted">@employee.RemainingSickLeave/@employee.LeaveBalance.Sick</small>
                                            </div>
                                        </td>
                                        <td>
                                            <a asp-action="EmployeeHistory" asp-route-userId="@employee.id"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-clock-history"></i> View History
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-center text-muted">No employees found.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-12">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

